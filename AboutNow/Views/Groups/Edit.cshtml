@model AboutNow.Models.Group

<h2 class="text-center"> Editare Grup </h2>
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Groups", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    @Html.Label("Name","Numele Grupului")
    @Html.EditorFor(m => m.Name, new {htmlAtrributes = new{@class = "form-control"} })
    @Html.ValidationMessageFor(m => m.Name,null,new {@class = "text-danger"})
    <br />
    <br />

    @Html.Label("Description","Descrierea Grupului")
    @Html.Editor("Description", new {htmlAttributes = new {@class = "form-control"} })
    @Html.ValidationMessage("Description",null,new { @class = "text-danger"})
    <br />
    <br />

    @Html.HiddenFor(m=>m.CreatedDate)
    <br />
    <button class="btn " style="background-color : #FFFB7D" type="submit">Modifica</button>
}
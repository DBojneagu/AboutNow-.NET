<div class="card-body ">

    <div class="d-flex  mb-3 " style="background-color: #85FFBD;
background-image: linear-gradient(45deg, #85FFBD 0%, #FFFB7D 100%);">
        <h3 class="card-title  py-3 px-3 rounded-3 d-flex text-center">@Model.Title</h3>
    </div>
    <div class="card-text">@Model.Content</div>

    <div class="d-flex flex-row justify-content-between mt-5">
        <div><i class="bi bi-globe-americas"></i> @Model.Category.CategoryName</div>
        <div><i class="bi bi-person"></i> @Model.User.UserName</div>
        <span class=""> @Model.Date</span>
    </div>
</div>
@model AboutNow.Models.Category
@{
    ViewBag.Title = "Editare categorie";
}

<h2 class="text-center" >@ViewBag.Title</h2>

@using (Html.BeginForm(controllerName:"Categories",actionName:"Edit",method : FormMethod.Post , routeValues :new{id = Model.Id}))

{
    @Html.Label("CategoryName","Titlul Categoriei")
    <br />
    @Html.TextArea("CategoryName",null,new {@class = "form-control", @placeholder ="How should we name it ?"})
    @Html.ValidationMessage("CategoryName",null,new{@class ="text-danger"})
    <br /><br />

    <button class="btn " style="background-color:#FFFB7D;color : black;" type="submit">Modifica categoria</button>
}


@model AboutNow.Models.Category

@{
    ViewBag.Title = "Adaugare Categorie";
}



<h2 class = "btn btn-warning">Adaugare Categorie</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Categories", FormMethod.Post))

{
    @Html.Label("CategoryName","Introduceti Numele Categoriei")
    <br />
    @Html.TextBox("CategoryName",null,new {@class = "form-control",@placeholder = "How should we name it?"})
    @Html.ValidationMessage("CategoryName",null,new{@class ="text-danger"})

    <br />
    <br />
    <button class="btn btn-success" type="submit">Adauga categorie</button>

}


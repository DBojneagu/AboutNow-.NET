@{
    ViewBag.Title = "Lista categorii";
}

<h2 class="text-center">@ViewBag.Title</h2>
<br />
@if (TempData.ContainsKey("message"))
{
    <h2 class="alert-warning text-center ">@ViewBag.Message</h2>
}

<a class="btn btn-warning" href="/Journals/Index">Inapoi la Journal</a>
<br />
<br />

@foreach (var category in ViewBag.Categories)
{
    <p>@category.CategoryName</p>
    <a class="btn alert-warning" href="/Categories/Show/@category.Id">Afisare categorie</a>
    <a class="btn alert-warning" href="/Categories/Edit/@category.Id">Editare categorie</a>
    <br />
    <hr />
    <br />
}
<br />
<a class="btn btn-warning" href="/Categories/New">Adauga o noua categorie</a>
<br />


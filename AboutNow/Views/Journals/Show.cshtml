
@*@Afisarea unui jurnal impreuna cu categoria din care face parte *@

<div class="d-flex justify-content-center">
    <a class="btn btn-outline-warning " href="/Journals/Index">Afisare Jurnale</a>
    
    <a class="btn btn-outline-warning " href="/Journals/New">Adauga Jurnal</a>
    
</div>

<br />



<div class="card " style="width : 35rem;

                            margin : 0 auto;
                            float : none;
                            margin-bottom:10px;">


    <div class="card-body">

            <div class="d-flex alert-warning mb-3 ">
                <h3 class="card-title  py-3 px-3 rounded-3 d-flex text-center">@ViewBag.Journal.Title</h3>
            </div>
            <div class="card-text">@ViewBag.Journal.Content</div>

            <div class="d-flex flex-row justify-content-between mt-5">
                <div><i class="bi bi-globe-americas"></i> @ViewBag.Category.CategoryName</div>

                

                <span class=""> @ViewBag.Journal.Date</span>
            </div>
        </div>

    

    <br />
    
    <div class="d-flex flex-row justify-content-between">

        <a class="btn btn-warning" href ="/Journals/Edit/@ViewBag.Journal.Id">Editeaza Jurnal</a>

        <form method="post" action="/Journals/Delete/@ViewBag.Journal.Id">
        
            <button class="btn btn-danger" type="submit">Sterge Jurnal</button>
        </form>

    </div>

</div>

<br />
<br />




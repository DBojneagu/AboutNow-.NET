@model AboutNow.Models.Journal
@*@Afisarea unui jurnal impreuna cu categoria din care face parte *@

<div class="d-flex justify-content-center">
    <a class="btn btn-outline-warning " href="/Journals/Index">Afisare Jurnale</a>
    
    <a class="btn btn-outline-warning " href="/Journals/New">Adauga Jurnal</a>
    
</div>

<br />



<div class="card " style="width : 35rem;

                            margin : 0 auto;
                            float : none;
                            margin-bottom:10px;">


    <div class="card-body">

            <div class="d-flex alert-warning mb-3 ">
                <h3 class="card-title  py-3 px-3 rounded-3 d-flex text-center">@Model.Title</h3>
            </div>
            <div class="card-text">@Model.Content</div>

            <div class="d-flex flex-row justify-content-between mt-5">
                <div><i class="bi bi-globe-americas"></i> @Model.Category.CategoryName</div>

                

                <span class=""> @Model.Date</span>
            </div>
        </div>

    

    <br />
    
    <div class="d-flex flex-row justify-content-between">

        <a class="btn btn-warning" href ="/Journals/Edit/@Model.Id">Editeaza Jurnal</a>

        <form method="post" action="/Journals/Delete/@Model.Id">
        
            <button class="btn btn-danger" type="submit">Sterge Jurnal</button>
        </form>

    </div>

</div>

<br />
<br />

@* Afisare comentarii impreuna cu butoanele de editare si stergere *@

@foreach (var comm in Model.Comments)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">

                <div>

                    <p>@comm.Content</p>
                    <small>@comm.Date</small>

                </div>
                <br>

                <div class="d-flex">

                    <div>

                        <a class="btn btn-outline-primary" href="/Comments/Edit/@comm.Id"><i class="bi bi-pencil-square"></i>Editeaza</a>

                    </div>

                    <div>

                        <form method="post" action="/Comments/Delete/@comm.Id">

                            <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Sterge</button>

                        </form>

                    </div>

                </div>

                <br />

            </div>

            <div class="col-md-2"></div>

        </div>

    </div>
}

@* Afisarea formularului in care se poate adauga un comentariu *@

<div class="container">

    <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div class="card">

                <form method="post" action="/Comments/New">

                    <div class="card-body">

                        <input type="hidden" name="JournalId" value="@Model.Id" />

                        <label>Continut comentariu</label>
                        <br />

                        <textarea class="form-control" name="Content"></textarea>
                        <br />

                        <button class="btn btn-success " type="submit">Adauga comentariul</button>

                    </div>

                </form>

            </div>

        </div>

        <div class="col-md-2"></div>

    </div>

</div>



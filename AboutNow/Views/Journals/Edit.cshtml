@model AboutNow.Models.Journal
@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center"> Editare Jurnal </h2>
<br />

@using (Html.BeginForm(actionName:"Edit",controllerName:"Journals",method:FormMethod.Post,routeValues:new{id = Model.Id}))
{
    @Html.Label("Title","Titlul Jurnalului")
    @Html.EditorFor(m => m.Title, new {htmlAtrributes = new{@class = "form-control"} })
    @Html.ValidationMessageFor(m => m.Title,null,new {@class = "text-danger"})
    
    @*e foarte important ca name sa ia aloarea EXACTA a numele atributului pe care il avem
    in baza de date*@
    <br />
    <br />

    @Html.Label("Content","Continutul Jurnalului")
    @Html.Editor("Content", new {htmlAttributes = new {@class = "form-control"} })
    @Html.ValidationMessage("Content",null,new { @class = "text-danger"})

    <br />
    <br />

    @Html.HiddenFor(m=>m.Date)
    <br />

    <label>Selectati  Categoria</label>

    @Html.DropDownListFor(m=>m.CategoryId,new SelectList(Model.Categ,"Value","Text"),"Selectati Categoria", new {@class = "form-control"})
    @Html.ValidationMessageFor(m=>m.CategoryId,null,new {@class = "text-danger"})

    <br />

    <button class="btn btn-warning" type="submit">Modifica Jurnal</button>

    }
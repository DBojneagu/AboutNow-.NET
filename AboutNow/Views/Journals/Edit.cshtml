
@{
    ViewBag.Title = "Edit";
}

<h2> Editare Jurnal </h2>
<br />

<form method="post" action="/Journals/Edit/@ViewBag.Journal.Id">

    <label>Titlul Jurnalului</label>
    <input type="text" name="Title" value="@ViewBag.Journal.Title" />
    @*e foarte important ca name sa ia aloarea EXACTA a numele atributului pe care il avem
    in baza de date*@
    <br />
    <br />

    <label>Continut Jurnal</label>
    <input type="text" name="Content" value="@ViewBag.Journal.Content" />

    <br />
    <br />

    <input type="Hidden" name="Date" value="@DateTime.Now" />
    <br />

    <label>Selectati  Categoria</label>

    <select name="CategoryId">

        @foreach (var category in ViewBag.Categories)
        {
            if(category.Id == ViewBag.Category.Id)
            {
                <option selected="selected" value="@category.Id">@category.CategoryName</option>
            }
            else
            {
                <option value ="@category.Id">
                    @category.CategoryName
                </option>
            }
        }
       

    </select>

    <br />

    <button class="btn btn-warning" type="submit">Modifica Jurnal</button>

</form>
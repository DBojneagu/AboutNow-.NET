@model AboutNow.Models.Journal
<h2 class="text-center" > Adaugare Jurnal </h2>
<br />

@using (Html.BeginForm(actionName:"New",controllerName:"Journals",method:FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Title","Titlul Jurnalului")
    <br />

    @Html.TextBox("Title",null,new {@class = "form-control",@placeholder = "How should we name it?"})
    <br />
    
    @Html.ValidationMessageFor(m => m.Title,null,new {@class = "text-danger"})

    <br />
    <br />


    @Html.Label("Content","Continutul Jurnalului")


    <br />
    @Html.TextArea("Content",null,new {@class = "form-control",@placeholder = "What's on your mind?"})

    @Html.ValidationMessage("Content",null,new { @class = "text-danger"})

    <br />
    <br />

    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
    "Categoria", new { @class = "form-control"})

    @Html.ValidationMessageFor(m=>m.CategoryId,null,new {@class = "text-danger"})
    <br />
    <button class="btn mt-5" style="background-color : #FFFB7D" type="submit">Adauga Jurnal</button>
}
    



@model AboutNow.Models.Profile
<h2 class="text-center"> Creare Profil </h2>
<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Profiles", method: FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("FirstName","First Name")
    <br />

    @Html.TextBox("FirstName",null,new {@class = "form-control",@placeholder = "What is your name?"})
    <br />

    @Html.ValidationMessageFor(m => m.FirstName,null,new {@class = "text-danger"})

    <br />
    <br />

    @Html.Label("LastName","Last name")
    <br />
    
    @Html.TextArea("LastName",null,new {@class = "form-control",@placeholder = "What's your last name?"})
    @Html.ValidationMessage("LastName",null,new { @class = "text-danger"})
    <br />

    @Html.Label("Description","Description")

    <br />
    @Html.TextArea("Description",null,new {@class = "form-control",@placeholder = "Describe yourself"})

    @Html.ValidationMessage("Description",null,new { @class = "text-danger"})

    @Html.Label("Privacy","Profile privacy")

    <br />
    @Html.TextArea("Privacy",null,new {@class = "form-control",@placeholder = "Choose private or public"})

    @Html.ValidationMessage("Privacy",null,new { @class = "text-danger"})

    <br />
    <button class="btn mt-5" style="background-color : #FFFB7D" type="submit">Creeaza Profil</button>
}
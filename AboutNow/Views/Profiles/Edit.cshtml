@model AboutNow.Models.Profile

<h2 class="text-center"> Editare Profil </h2>
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Profiles", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    @Html.Label("FirstName","First Name")
    @Html.EditorFor(m => m.FirstName, new {htmlAtrributes = new{@class = "form-control"} })
    @Html.ValidationMessageFor(m => m.FirstName,null,new {@class = "text-danger"})
    <br />
    <br />

    @Html.Label("LastName","Last Name")
    @Html.EditorFor(m => m.LastName, new {htmlAtrributes = new{@class = "form-control"} })
    @Html.ValidationMessageFor(m => m.LastName,null,new {@class = "text-danger"})
    <br />
    <br />

    @Html.Label("Description","Descrierea Profilului")
    @Html.Editor("Description", new {htmlAttributes = new {@class = "form-control"} })
    @Html.ValidationMessage("Description",null,new { @class = "text-danger"})
    <br />
    <br />

    @Html.Label("Privacy","Privacy")
    @Html.Editor("Privacy", new {htmlAttributes = new {@class = "form-control"} })
    @Html.ValidationMessage("Privacy",null,new { @class = "text-danger"})
    <br />
    <br />

    <br />
    <button class="btn " style="background-color : #FFFB7D" type="submit">Modifica</button>
}